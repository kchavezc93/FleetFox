
# Variables de Entorno - Ejemplo
# Copia este archivo a .env y completa los valores para tu entorno.

# Nombre de la Empresa
NEXT_PUBLIC_COMPANY_NAME="Nombre de Tu Empresa Aquí"
NEXT_PUBLIC_COMPANY_LOGO_URL="/logo.png" # o una URL pública

# Configuración de la Base de Datos
# Estas variables son leídas por src/lib/db.ts para conectar a la base de datos.
# Asegúrate de configurarlas correctamente para tu entorno de producción o desarrollo.
DB_TYPE="SQLServer" # Opciones: PostgreSQL, MySQL, SQLServer, SQLite
# Nota: Si el SQL Server está en tu LAN, usa su IP/LAN host (ej. 192.168.1.50)
DB_HOST="localhost"
DB_PORT="1433"
DB_USER="tu_usuario_db"
DB_PASSWORD="tu_password_db_seguro"
DB_NAME="nombre_de_tu_db"

# Opcional para SQL Server (ajustar según la configuración de tu servidor)
DB_ENCRYPT="false" # 'true' para Azure SQL o producción segura.
DB_TRUST_SERVER_CERTIFICATE="true" # Desarrollo local suele requerir 'true'. Producción: 'false'.

# Google AI - Genkit (Si se usara)
# GOOGLE_API_KEY="TU_GOOGLE_API_KEY_SI_USAS_GENKIT_CON_MODELOS_DE_GOOGLE"

# Sesiones
# Tiempo de vida de la sesión en días (utilizado por auth-actions.ts)
SESSION_TTL_DAYS="7"
SESSION_COOKIE_SECURE = "false" # 'true' en producción con HTTPS

# Importante en Docker: El contenedor expone 3000, mapeado al host 9002 via docker-compose
# No cambies PORT aquí; controla el puerto a través del mapeo en docker-compose.yml

# Formato de moneda e idioma (para UI)
APP_CURRENCY="NIO"   # ISO 4217, ej. NIO, MXN, USD
APP_LOCALE="es-NI"   # Locale BCP-47, ej. es-NI, es-MX, es-ES